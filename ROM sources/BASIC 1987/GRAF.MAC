	BIT	#4000,4(SP)	; 11-ахр:пхянбюмхе (0)--оепелеыемхе (1)
	BNE	1$		; оепелеыемхе
	INC	R0		; пхянбюмхе--гюохяэ R0=1
	.LINE			; бейрнп
1$:	.PSET			; оепелеыемхе--рнвйю
	TST	4(SP)		; бнгбпюр й опефмхл йннпдхмюрюл?
	BPL	3$		; мер
	CLR	R0
	MOV	(SP)+,R2	; дю- бняярюмнбкемхе йннпдхмюр
	MOV	(SP)+,R1
	.PSET
	BR	4$
3$:	CMP	(SP)+,(SP)+
4$:	MOV	#70000,(SP)
	JMP	AGAIN
;-----------------------------------------
;		онксвемхе гмюKю дкъ йнл. л
;-----------------------------------------
$$SIGN:
	CALL	BLNC		; опносяй опнаекнб
	CMPB	#'+,(R3)	; окчя ?
	BNE	1$		; мер
	BIS	#1000,6(SP)	; дю--сярюмнбйю ахрю 9
	BIC	#1,6(SP)	; Cапня ахрю 0
	INC	R3		; опносяй "+"
	BR	2$
1$:	CMPB	#'-,(R3)	; лхмся ?
	BNE	2$		; мер
	BIS	#1001,6(SP)	; дю--сярюмнбйю ахрнб 0 х 9
	INC	R3		; опносяй "-"
