	CALL	$$SENSE		; онксвхрэ гмювемхе
	CALL	$$SCALE		; люяьрюахпнбюмхе
	ASRB	(SP)		; ахр 0-- нрпхжюрекэмши R0 ?
	BCC	1$		; дю --хглемемхе гмюйю
	NEG	R0		; -R0
1$:	ASRB	(SP)		; ахр 1--ялеыемхе он у
	BCC	2$		; мер
	ADD	R0,R1		; ялеыемхе он  у
2$:	ASRB	(SP)		; ахр 2-- хглемемхе гмюйю R0 ?
	BCC	3$		; мер
	NEG	R0		; хглемемхе гмюйю
3$:	ASRB	(SP)		; ахр 3-- ялеыемхе он Y
	BCC	MOVIN		; мер -оепеунд мю оепелеыемхе
	ADD	R0,R2		; ялеыемхе он Y
;----------------------------------
;			оепелеыемхъ
;----------------------------------
MOVIN:
	ASRB	@SP		; дкъ юаянкчрмнцн M
	BCC	5$		; Y ян гмюйнл "-" ?
	NEG	R2		; дю
;
5$:
	MOV	$DRWX,-(SP)
	MOV	$DRWY,-(SP)
