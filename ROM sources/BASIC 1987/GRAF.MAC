	ASLB	5(SP)		; бняярюм. опхгм. нрмняхр.
	BIT	#1000,4(SP)	; нрмняхрекэмне ?
	BEQ	2$		; мер
	CALL	$$SCALE		; дю--люяьрюахпнбюмхе
2$:	MOV	R0,R2		; ялеыемхе он Y
	CMP	(SP)+,(SP)+	; сйюгюрекэ ярейю мю WM
