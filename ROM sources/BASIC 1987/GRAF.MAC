	BCC	7$		; мер
	NEG	R2		; дю-хглемемхе гмюйю дY
7$:	ASRB	(SP)		; гмюй "-" опх ду ?
	BCC	8$		; мер
	NEG	R1		; дю--хглемемхе гмюйю ду
8$:	ASR	R0		; ю0 хкх ю2
	BCS	9$		; дю
	MOV	R1,R0		; мер-оепеярюмнбйю
	MOV	R2,R1
